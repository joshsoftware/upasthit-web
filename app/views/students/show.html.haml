.card.card-center
  .card-header
    .row
      %h5 Student Details
      .offset-md-9
        = link_to edit_student_path(@student), class: 'btn-sm edit-btn btn-space' do
          .i.fa.fa-edit
        %button.btn.btn-sm.btn-default.fa.fa-trash.delete-button.btn-danger{"data-target"=>".bd-example-modal-sm", "data-toggle"=>"modal", type: "button", "data-id"=> @student.id}
  .card-body
    .row
      .offset-md-2
      .col-md-4.form-group
        .row
          .col-md-7
            .label Roll Number :
          .col-md-5
            = @student.roll_no

      .col-md-4.form-group
        .row
          .col-md-7
            .label Name :
          .col-md-5
            = @student.full_name.titleize
    .row
      .offset-md-2
      .col-md-4.form-group
        .row
          .col-md-7
            .label Registration No :
          .col-md-5
            = @student.registration_no
      .col-md-4.form-group
        .row
          .col-md-7
            .label Standard :
          .col-md-5
            = @student.standard.name || "-"
    .row
      .offset-md-2
      .col-md-4.form-group
        .row
          .col-md-7
            .label Date Of Birth :
          .col-md-5
            = @student.dob.strftime("%d-%m-%Y")
      .col-md-4.form-group
        .row
          .col-md-7
            .label Gender :
          .col-md-5
            = @student.gender.titleize
    %hr
    .row
      .offset-md-2
      .col-md-4.form-group
        .row
          .col-md-7
            .label Guardian Name :
          .col-md-5
            = @student.guardian_name.titleize
      .col-md-4.form-group
        .row
          .col-md-7
            .label Mobile Number 1 :
          .col-md-5
            = @student.guardian_mobile_no
    .row
      .offset-md-2
      .col-md-4.form-group
        .row
          .col-md-7
            .label Address :
          .col-md-5
            = @student.address
      .col-md-4.form-group
        .row
          .col-md-7
            .label Mobile Number 2 :
          .col-md-5
            = @student.guardian_alternate_mobile_no || "-"
    .row
      .offset-md-2
      .col-md-4.form-group
        .row
          .col-md-7
            .label Preferred Language :
          .col-md-5
            = LOCALES[:"#{@student.preferred_language}"]
    %hr
    .row
      .offset-md-2
      .col-md-4.form-group
        .row
          .col-md-7
            .label Driver Name :
          .col-md-5
            = @student.driver_name&.titleize || "-"
      .col-md-4.form-group
        .row
          .col-md-7
            .label Mobile Number :
          .col-md-5
            = @student.driver_number || "-"
    .row
      .offset-md-2
      .col-md-4.form-group
        .row
          .col-md-7
            .label Vehicle Number :
          .col-md-5
            = @student.vehicle_number || "-"


.modal.bd-example-modal-sm{"aria-hidden" => "true", "aria-labelledby" => "mySmallModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body
        %h6.align-body Are You Sure?
      .modal-footer
        %button.btn.btn-success{:type => "button", onClick: "delete_student()"} Yes
        %button.btn.btn-danger{"data-dismiss" => "modal", :type => "button"} No
:javascript
  var student_id= ""
  $('.bd-example-modal-sm').on('show.bs.modal',function(event){
    var button = $(event.relatedTarget.dataset)
    student_id = button[0].id
  })
  function delete_student(){
    $.ajax({
      url: '/'+locale+'/students/'+student_id,
      type: 'DELETE',
      dataType: 'json',
    }).done(function(result){
      $('#modal-window').modal('toggle');
      location.reload();
    })
  }
